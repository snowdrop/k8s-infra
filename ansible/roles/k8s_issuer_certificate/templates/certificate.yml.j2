{% set dnsNameList = (item.names.split(",")) %}
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ item.name }}
  labels:
    app: ca-cert
  namespace: {{ item.namespace }}
spec:
  renewBefore: {{ renewBefore }}
  privateKey:
    size: 2048
    algorithm: RSA
  issuerRef:
    kind: Issuer
    name: letsencrypt-{{ letsencrypt_env }}-{{ item.name }}
  secretName: {{ item.secretname }}
  dnsNames:
  {% for i in dnsNameList %}
  - '{{ i }}'
  {% endfor %}
