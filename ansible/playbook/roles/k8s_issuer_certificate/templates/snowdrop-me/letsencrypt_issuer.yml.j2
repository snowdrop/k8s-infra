apiVersion: cert-manager.io/v1alpha2
kind: Issuer
metadata:
  name: letsencrypt-{{ letsencrypt_env }}
spec:
  acme:
    server: {{ letsencrypt_url }}
    email: {{ letsencrypt_email }}
    privateKeySecretRef:
      name: letsencrypt-{{ letsencrypt_env }}
    solvers:
      - selector:
          dnsNames:
          - snowdrop.me
        dns01:
          webhook:
            config:
              apiKeySecretRef:
                name: godaddy-api-key
                key: token
              production: true
              ttl: 600
            groupName: acme.mycompany.com
            solverName: godaddy
